@import "normalize.styl"

body
	background #ADF

article.item
	background #FFF
	border 2px solid #00A
	border-radius 0.2em
	color #333
	margin 0.5em
	padding 0.5em

	a
		color #00A
		text-decoration none

	a:visited
		color #00A

	a:hover
		color #09F

	.titulo
		color #00A
		font-size 1.2em
		margin 0
		padding 0

	.articulo
		line-height 1.5em

	.autor
		color #09F
		font-size 0.8em
		font-weight bold

	.etiquetas
		font-size 0.8em
		font-weight bold
		line-height 2em
		margin 0.5em 0 0 0

		a 
			color #F70
			padding 0.1em 0.2em

		a:visited
			color #F70

		a:hover
			color #09F

		a:after
			content ","

		a:last-child:after
			content ""